{
    "name": "aem-site-template-basic-theme",
    "version": "0.0.1",
    "description": "Basic AEM site theme",
    "private": true,
    "main": "src/main.ts",
    "license": "MIT License, Copyright 2020 Adobe Systems Incorporated",
    "scripts": {
        "dev": "concurrently 'snowpack dev' 'npm run aem-live'",
        "css": "postcss src/index.css -o dist/css/theme.css",
        "css:watch": "postcss src/index.css -o dist/css/theme.css -w",
        "build:snowpack": "snowpack build",
        "build:webpack": "webpack -p --config ./webpack.prod.js",
        "live:default": "watch 'webpack -d --env dev --config ./webpack.dev.js' src & aem-site-theme-builder live & browser-sync start --proxy 'localhost:7000' --files 'dist'",
        "aem-live": "aem-site-theme-builder live"
    },
    "devDependencies": {
        "@adobe/aem-site-theme-builder": "4.0.0",
        "@snowpack/plugin-postcss": "^1.0.10",
        "autoprefixer": "^9.8.6",
        "bestzip": "^2.1.6",
        "browser-sync": "^2.26.13",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.4",
        "cross-var": "^1.1.0",
        "css-loader": "^3.0.0",
        "dotenv": "^8.2.0",
        "dotenv-cli": "^3.2.0",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.4.4",
        "node-sass": "^4.11.0",
        "normalize.css": "8.0.1",
        "npm-run-all": "^4.1.5",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "postcss-each": "^0.10.0",
        "postcss-extend": "^1.0.5",
        "postcss-import": "^13.0.0",
        "postcss-inline-svg": "^5.0.0",
        "postcss-loader": "^3.0.0",
        "postcss-nested": "^5.0.3",
        "sass-loader": "^7.1.0",
        "snowpack": "^2.18.2",
        "terser-webpack-plugin": "^1.4.1",
        "ts-loader": "^5.3.3",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint-webpack-plugin": "^2.0.2",
        "typescript": "^3.3.3333",
        "watch": "^1.0.2",
        "webpack": "^4.27.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.9.0",
        "webpack-import-glob-loader": "^1.6.3",
        "webpack-merge": "^4.2.1"
    },
    "dependencies": {
        "concurrently": "^5.3.0",
        "postcss": "^8.2.1",
        "postcss-cli": "^8.3.0",
        "tailwindcss": "^2.0.1"
    },
    "browserslist": [
        "last 2 version",
        "> 1%"
    ]
}
